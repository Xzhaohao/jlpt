            android:text="@string/test_n4"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_card_title" />

        <TextView
            android:id="@+id/n4_row_count"
            style="@style/main_item_exam_count" />

        <TextView
            style="@style/main_item_pass_score"
            android:layout_below="@+id/n4_row_count"
            android:text="@string/pass_score2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/n5_row"
        style="@style/main_item_relativeLayout"
        android:background="@drawable/n5_gradient_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_n5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_card_title" />

        <TextView
            android:id="@+id/n5_row_count"
            style="@style/main_item_exam_count" />

        <TextView
            style="@style/main_item_pass_score"
            android:layout_below="@+id/n5_row_count"
            android:text="@string/pass_score4" />

    </RelativeLayout>

</LinearLayout>